# Environment Variables for Mentorship System
# Copy this file to .env for local development

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-generate-a-random-one
FLASK_ENV=production
DEBUG=False

# Database Configuration
# For SQLite (default): leave DATABASE_URL empty
# For PostgreSQL: DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL=

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Optional: Application Settings
APP_NAME=Mentorship Management System
MAX_MENTEES_PER_MENTOR=10
SESSION_TIMEOUT=30
